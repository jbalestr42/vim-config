#ifndef SCREENBASE_HPP
# define SCREENBASE_HPP

# include <Box2D/Box2D.h>
# include <SFML/Graphics.hpp>

enum EScreen
{
	e_screen_game,

	e_screen_nb
};

class AScreenBase : public sf::Drawable
{
protected:
	AScreenBase(void);
	virtual ~AScreenBase(void);
	virtual void draw(sf::RenderTarget &p_target, sf::RenderStates p_states) {};

public:

	virtual void init(void) = 0;
	virtual void update(float pf_Deltatime) = 0;
	virtual void pollEvent(sf::Event p_event) = 0;
};

#endif
