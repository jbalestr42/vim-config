#include "SceneTestJuj.hpp"
#include "Main/ResourcesManager.hpp"
#include "Main/DefineResources.hpp"

SceneTestJuj::SceneTestJuj(void)
{
	mp_sprite = new AnimatedSprite(TEXTURE_BOB, 1.f, 16, 250, 250, sf::Vector2i(0, 250));
	mp_sprite->setPosition(sf::Vector2f(50.f, 50.f));
}

SceneTestJuj::~SceneTestJuj(void)
{
	delete mp_sprite;
}

void SceneTestJuj::init(void)
{
}

void SceneTestJuj::update(float pf_deltatime)
{
	mp_sprite->update(pf_deltatime);
}

void SceneTestJuj::draw(sf::RenderTarget &p_target, sf::RenderStates p_states) const
{
	p_target.draw(*mp_sprite);
}

void SceneTestJuj::pollEvent(sf::Event p_event)
{

}
