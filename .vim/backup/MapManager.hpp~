#ifndef MAPMANAGER_HPP
# define MAPMANAGER_HPP

# include "Map/TransitionManager.hpp"
# include "Map/StaticObjectManager.hpp"

class MapManager : public sf::Drawable
{
public:
	MapManager(void);
	virtual ~MapManager(void);

	void init(Map::EMapType p_mapType);
	TransitionManager & getTransitionManager(void);
	StaticObjectManager & getStaticObjectManager(void);
	void update(float pf_deltatime);
	void draw(sf::RenderTarget& render, sf::RenderStates states) const;

private:
	Biome				m_biome;
	TransitionManager		m_transitionManager;
	StaticObjectManager		m_staticObjectManager;

};

#endif
